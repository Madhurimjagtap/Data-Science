def factorial(n):
    if n < 0:
        return 0
    elif n == 0 or n == 1:
        return 1
    else:
        fact = 1
        while(n>1):
            fact *= n
            n -= 1
            return fact
num = 5;
print("factorial of", num, "is", factorial(num))





def facto(n1):
    return 1 if (n1 == 1 or n1 == 0) else n1*facto(n1-1);
num1 =5;
print("factorial of", num1, "is", facto(num1))




